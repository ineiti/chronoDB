{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.3/.schema/devbox.schema.json",
  "packages": [
    "nodejs@latest",
    "vscode@latest",
    "git@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "code": [
        "Code --user-data-dir .vscode"
      ],
      "dev": [
        "npm run dev"
      ]
    }
  }
}